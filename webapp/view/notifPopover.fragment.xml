		<l:VerticalLayout  width="100%">
			<l:content>
				<List items="{path: 'data>/notifications', templateShareable : 'true'}" class="sapContrastPlus sapContrast">
					<NotificationListItem authorName="{data>eName}" title="{data>eIssue}" description="{data>eId}"></NotificationListItem>
					<!--<NotificationListItem title="kumar" description="Employee"></NotificationListItem>-->
				</List>
				</l:content>
				</l:VerticalLayout>
			</Popover>
		</core:FragmentDefinition>